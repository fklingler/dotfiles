[user]
  name = Fran√ßois KLINGLER
  email = francois@fklingler.com

[core]
  editor = vim --noplugin
  excludesfile = ~/.gitignore
  pager = less -F -X

[push]
  default = simple

[merge]
  defaultToUpstream = 1
  tool = opendiff

[help]
  autocorrect = 1

[color]
  branch = auto
  status = auto
  diff = auto
  grep = auto

[alias]
  ci = commit
  co = checkout
  st = status
  sb = status -sb
  graph = log --graph --pretty=format:'%C(red)%h%Creset %C(yellow)%cr%Creset %C(bold blue)%an%Creset %Cgreen%d%Creset %s' --date=short --date-order
  ls = log --pretty=format:'%C(red)%h%Creset %C(yellow)%cr%Creset %C(bold blue)%an%Creset %s' --date=short --date-order
  amend = commit --amend -C HEAD
  credit = commit --amend --author "$1 <$2>" -C HEAD
  ignored = ls-files --others -i --exclude-standard
  purr = pull --rebase
  standup = git log --since yesterday --author francois@fklingler.com
  promote = !$ZSH/bin/git-promote
  wtf     = !$ZSH/bin/git-wtf
  rank-contributers = !$ZSH/bin/git-rank-contributers
  count   = !git shortlog -sn
